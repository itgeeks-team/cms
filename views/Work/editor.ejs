<!--Menu-->
<div class="text-right">
  <div class="btn-group btn-group-sm">
    <button type="button" class="btn btn-primary" id="work-run">Run</button>
    <button type="button" class="btn btn-primary" id="work-tidy">Tidy</button>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#work-settings-modal">Settings</button>
  </div>
</div>

<!--Editors-->
<div class="row">
  <div class="col-lg-4" id="work-html">
    <h5>HTML</h5>
  </div>
  <div class="col-lg-4" id="work-css">
    <h5>CSS</h5>
  </div>
  <div class="col-lg-4" id="work-js">
    <h5>JavaScript</h5>
  </div>
</div>

<!--Output-->
<div class="row">
  <div class="col-lg-12">
    <iframe id="work-output"></iframe>
  </div>
</div>

<!--Settings Modal-->
<div class="modal" id="work-settings-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Settings</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <button type="button" class="btn btn-primary" id="work-save-work" data-dismiss="modal">Save work</button>
        <button type="button" class="btn btn-primary" id="work-save-template" data-dismiss="modal">Save as Template</button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>